#!groovy

properties([
    [
        $class: 'GithubProjectProperty',
        displayName: 'Professional API',
        projectUrlStr: 'https://github.com/hmcts/rpa-professional-api'
    ],
    pipelineTriggers([
        [$class: 'GitHubPushTrigger']
    ])
])

@Library("Infrastructure")

def type = "java"
def product = "rpa"
def component = "professional-api"

def channel = '#professional_api'

List<LinkedHashMap<String, Object>> secrets = [
    // secret('s2s-token', 'S2S_TOKEN')
    secret('test-client-key-store', 'TEST_CLIENT_KEY_STORE'),
    secret('test-client-key-store-password', 'TEST_CLIENT_KEY_STORE_PASSWORD'),
    secret('test-client-subscription-key', 'TEST_CLIENT_SUBSCRIPTION_KEY')
]

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
    [ $class: 'AzureKeyVaultSecret',
      secretType: 'Secret',
      name: secretName,
      version: '',
      envVariable: envVar
    ]
}

withPipeline(type, product, component) {
    enableSlackNotifications(channel)
    loadVaultSecrets(secrets)
}
